<div class="container-fluid"> 
    <div class="row" style="background-image: url(../img/back.png); background-repeat: no-repeat; background-size: auto;">
        <div class="border border-dark" id="sidebar-container" style="background-color:#FFCC29;">
            <div class="menu">
                <a href="/historial" class="btn btn-dark d-block text-ligth p-2 mx-2 my-2"><i class="fas fa-table"></i> Historial</a>
                
                <a href="/eventos" class="d-block text-ligth p-2 btn btn-dark mx-2 my-2"><i class="fas fa-calendar-alt"></i> Eventos</a>
               <div class="dropdown mx-2">
                    <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-edit"></i> Actualizar Datos
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/links/edit">Datos Usuario</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/vehicles/edit">Datos Vehículo</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mx-auto mt-3">
            <div class="card shadow p-3 mb-5 bg-white rounded">
                <div class="card-header m-1">
                    <h4 class="text-center">Actualizar Datos Usuario</h4>
                </div>
                <div class="card-body m-1" style="background-color:#FFCC29;">
                    <form action="/links/editUser" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="exampleFormControlInput1">Telefono: </label>
                                <input type="text" value={{user.tel}} name="tel" class="form-control" placeholder="Telefono" autofocus>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="exampleFormControlInput1">Contraseña: </label>
                                <input type="password" value={{user.password}} name="password" class="form-control" placeholder="Password" required autofocus>
                            </div>
                        </div>
                        <div class="form-group"> 
                            <button class="btn btn-dark btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>