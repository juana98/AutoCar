<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-cotrol" name="id" placeholder="ID" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-cotrol" name="nombre" placeholder="Nombre" autofocus>
